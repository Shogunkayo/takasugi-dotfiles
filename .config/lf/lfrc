# set cleaner ~/.config/lf/lf_kitty_clean
# set previewer ~/.config/lf/lf_kitty_preview

set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id

# custom functions
cmd setwallpaper %cp "$f" ~/.config/wall.jpg && xwallpaper --zoom "$f"

cmd unarchive ${{
	case "$f" in
		*.zip) unzip "$f" ;;
		*.tar.gz) tar -xzvf "$f" ;;
		*.tar.bz2) tar -xjvf "$f" ;;
		*.tar) tar -xvf "$f" ;;
		*) echo "i dunno how 2 xtract" ;;
	esac
}}

# remove default bindings
map m
map o
map n
map "'"
map '"'
map d

# set bindings
map . set hidden!
map DD delete
map p paste
map x cut
map y copy
map <enter> open
map R reload
map bg setwallpaper
map au unarchive
